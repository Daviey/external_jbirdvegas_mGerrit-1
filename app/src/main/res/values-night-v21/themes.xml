<resources>
    <style name="Theme.Base" parent="MaterialDrawerTheme">
        <item name="android:colorAccent">@color/text_orange</item>
        <item name="android:textColorPrimary">@color/actionbar_text</item>
        <item name="android:actionOverflowButtonStyle">@style/OverFlow.Dark</item>
        <item name="appBarTheme">@style/NoActionBar.AppBarOverlay.Dark</item>
        <item name="toolbarTheme">@style/NoActionBar.PopupOverlay.Dark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="gerritIcon">@drawable/ic_menu_source</item>
        <item name="projectsIcon">@drawable/ic_menu_project_dark</item>
        <item name="refreshIcon">@drawable/ic_action_refresh_dark</item>
        <item name="shareIcon">@drawable/ic_action_share_dark</item>
        <item name="mainBackgroundColor">@color/main_background</item>
        <item name="cardTextStyle">@style/CardText</item>
        <item name="cardTitleStyle">@style/CardTitle</item>
        <item name="colorCardBackground">@color/card_background</item>
        <item name="clickableCardBackground">@drawable/commit_card_background_states</item>
        <item name="selectableCardBackground">@drawable/files_card_background_states</item>
        <item name="viewIcon">@android:drawable/ic_menu_view</item>
        <item name="browserIcon">@drawable/ic_action_web_site_dark</item>
        <item name="warningIcon">@drawable/ic_action_warning</item>
        <item name="saveIcon">@drawable/ic_action_save_dark</item>
        <item name="searchMenuIcon">@drawable/ic_action_search_dark</item>
        <item name="diffStyle">@style/Diff.Dark</item>
        <item name="changeInsertedStyle">@style/CardText.Inserted</item>
        <item name="changeDeletedStyle">@style/CardText.Deleted</item>
        <item name="backIcon">@drawable/ic_nav_previous_item</item>
        <item name="nextIcon">@drawable/ic_action_next_item_dark</item>
        <item name="backgroundTop">@drawable/border_top_dark</item>
        <item name="acceptIcon">@drawable/ic_action_accept</item>
        <item name="cancelIcon">@drawable/ic_action_cancel_dark</item>
        <item name="signinButtonStyle">@style/SignInButton</item>
        <item name="signinErrorStyle">@style/SigninFailure</item>
        <item name="secureIcon">@drawable/ic_action_secure_dark</item>
        <item name="starredIcon">@drawable/ic_action_starred_dark</item>
        <item name="unstarredIcon">@drawable/ic_action_unstarred_dark</item>
        <item name="borderlessButtonBackground">@style/BorderlessBackground.Dark</item>
        <item name="overflowIcon">@drawable/ic_action_overflow_dark</item>
        <item name="upIcon">@drawable/ic_nav_expand</item>
        <item name="sendIcon">@drawable/ic_action_send_dark</item>
        <item name="branchIcon">@drawable/ic_action_split_dark</item>
        <item name="userIcon">@drawable/ic_account</item>
        <item name="dateIcon">@drawable/ic_calendar</item>
        <item name="searchViewStyle">@style/MaterialSearchView</item>

        <item name="colorAccent">@color/material_drawer_accent</item>
        <item name="colorPrimary">@color/card_background</item>

        <item name="android:windowContentTransitions">true</item>
        <!-- Shared element transitions -->
        <item name="android:windowSharedElementEnterTransition">@transition/shared_view_transform</item>
        <item name="android:windowSharedElementExitTransition">@transition/shared_view_transform</item>
    </style>
</resources>
